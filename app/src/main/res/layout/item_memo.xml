<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:background="@drawable/bg_gray"
    android:layout_marginBottom="15dp">

    <ImageView
        android:id="@+id/btn_check"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:srcCompat="@drawable/btn_memo_check_black" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="30분 미만 자전거 타고 다니기"
        android:textColor="@color/gray_500"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_edit"
        app:layout_constraintStart_toEndOf="@+id/btn_check"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_edit"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="7dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_memo_edit" />

    <TextView
        android:id="@+id/memo"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="좌우 여백 20 좌우 여백 20 좌우 여백 20 좌우 여백 20 프리텐다드 레귤러 12 프리텐다드 레귤러 12 프리텐다드 레귤러 12 위 여백 50 위 여백 50 행간 18"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="270dp"
        android:layout_height="180dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memo"
        app:srcCompat="@drawable/bg_memo" />

    <ImageView
        android:id="@+id/bg"
        android:layout_width="218dp"
        android:layout_height="22dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img"
        app:srcCompat="@drawable/bg_memo_emoji" />

    <ImageButton
        android:id="@+id/btn_lock"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/btn_memo_lock" />

    <TextView
        android:id="@+id/like1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="00"
        android:textColor="@color/gray_500"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg" />

    <TextView
        android:id="@+id/like2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="00"
        android:textColor="@color/gray_500"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg" />

    <TextView
        android:id="@+id/like3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="00"
        android:textColor="@color/gray_500"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg" />

</androidx.constraintlayout.widget.ConstraintLayout>
