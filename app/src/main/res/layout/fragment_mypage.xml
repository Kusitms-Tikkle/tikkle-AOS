<!--    사용자 프로필-->


    <!--준비중입니다-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myprofile"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.0"
        android:background="@drawable/bg_item_line">

        <ImageView
            android:id="@+id/imageMyprofile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:srcCompat="@drawable/ic_myprofile" />

        <ImageView
            android:id="@+id/btnEditMyprofile"
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.224"
            app:layout_constraintStart_toStartOf="@+id/imageMyprofile"
            app:layout_constraintTop_toTopOf="@+id/imageMyprofile"
            app:layout_constraintVertical_bias="0.2"
            app:srcCompat="@drawable/btn_editprofile" />


        <TextView
            android:id="@+id/mynickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="나태진123"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageMyprofile"
            app:layout_constraintVertical_bias="0.182" />

        <TextView
            android:id="@+id/myconsumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="전통적 알뜰형"
            android:textColor="@color/orange_100"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/quotationmark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/quotationmark"
            app:layout_constraintTop_toTopOf="@+id/quotationmark"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/quotationmark"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mynickname"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/ic_quotationmark" />

    </androidx.constraintlayout.widget.ConstraintLayout>

