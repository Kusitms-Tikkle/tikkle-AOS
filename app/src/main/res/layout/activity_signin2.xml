<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".SigninActivity2">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/signin2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 메뉴바 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_item_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="약관동의"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--view-->

    <TextView
        android:id="@+id/string1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="티끌이 처음이시군요"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.05" />


    <TextView
        android:id="@+id/string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="약관내용에 동의"
        android:textColor="@color/orange_100"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/string1"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/string2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="해주세요"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/string"
        app:layout_constraintTop_toBottomOf="@+id/string1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/btnAll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/bg_button_gray1"
        android:gravity="left|center_vertical"
        android:padding="10dp"
        android:text="이용약관 전체 동의"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.188" />

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/mycheckbox"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="@+id/btnAll"
        app:layout_constraintEnd_toEndOf="@+id/btnAll"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/btnAll"
        app:layout_constraintTop_toTopOf="@+id/btnAll"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/btnEssential"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:gravity="left|center_vertical"
        android:padding="10dp"
        android:text="개인정보 수집 동의 (필수)"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAll"
        app:layout_constraintVertical_bias="0" />

    <CheckBox
        android:id="@+id/check_box1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/mycheckbox"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="@+id/btnEssential"
        app:layout_constraintEnd_toEndOf="@+id/btnEssential"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/btnEssential"
        app:layout_constraintTop_toTopOf="@+id/btnEssential"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="티끌 개인정보 처리 방침"
        android:textColor="@color/gray_300"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/btnOptional"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEssential"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/btnprivacy"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnOptional"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toEndOf="@+id/privacy"
        app:layout_constraintTop_toBottomOf="@+id/btnEssential"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/btn_next" />

    <TextView
        android:id="@+id/btnOptional"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:gravity="left|center_vertical"
        android:padding="10dp"
        android:text="마켓팅 및 알림 수신 동의 (선택)"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEssential"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/check_box2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/mycheckbox"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="@+id/btnOptional"
        app:layout_constraintEnd_toEndOf="@+id/btnOptional"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/btnOptional"
        app:layout_constraintTop_toTopOf="@+id/btnOptional"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="필수항목 동의를 눌러주세요."
        android:textColor="@color/sub_red"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/btnDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOptional"
        app:layout_constraintVertical_bias="0.82" />

    <TextView
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/bg_button_gray"
        android:gravity="center"
        android:text="다음"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
